/* general styles */

table.cloth, td.cloth{
	font:100% Arial, Helvetica, sans-serif; 
}
table.cloth{width:100%;border-collapse:collapse;margin:1em 0;}
th.cloth, td.cloth{text-align:center;padding:.5em;border:1px solid #fff;}
th.cloth{text-align:center;background:#206DD7 url(tr_back.gif) repeat-x;color:#fff;}
td.cloth{background:#e5f1f4;}

/* tablecloth styles */

tr.even td.cloth{background:#e5f1f4;}
tr.odd td.cloth{background:#f8fbfc;}

/* tablecloth styles */
tr td.cloth1{background:#e5f1f4;border:1px solid #fff;padding:.5em;text-align:center;}
tr td.cloth2{background:#f8fbfc;border:1px solid #fff;padding:.5em;text-align:center;}

th.over, tr.even th.over, tr.odd th.over{background:#4a98af;}
th.down, tr.even th.down, tr.odd th.down{background:#bce774;}
th.selected, tr.even th.selected, tr.odd th.selected{}

td.over, tr.even td.over, tr.odd td.over{background:#ecfbd4;}
td.down, tr.even td.down, tr.odd td.down{background:#bce774;color:#fff;}
td.selected, tr.even td.selected, tr.odd td.selected{background:#bce774;color:#555;}

